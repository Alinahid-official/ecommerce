<%- include('partials/header')%>
<div class="col-md-8">
    <div class="product_list">
        <div class="row">
            <div class="col-lg-6 col-sm-6">
                <div class="single_product_item">
                    <img src="/product-images/<%= p.id %>/<%= p.image %>" alt="" class="img-fluid">
                    <h3> <p><%= p.title %></p> </h3>
                    <p><%= p.desc %></p>
                    <p>From <%= parseFloat(p.price).toFixed(2) %></p>
                    <% if(loggedIn) { %>
                        <p><a href="/cart/add/<%= p.slug %>" class="btn hero-btn" >Add to cart </a></p>
                        <% } else { %>
                        <p>You must be logged in to purchase items.</p>
                        <% }; %>
                </div>
            </div>
        </div>
    </div>
    
</div>
<%- include('partials/footer') %>